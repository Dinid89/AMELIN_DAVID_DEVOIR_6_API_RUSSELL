<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include("composants/head") %>
</head>

<body>
    <header>
        <%- include("composants/navbar") %>
    </header>

    <main>
        <%- include("composants/aside") %>

            <section class="catwaySection">
                <h2>Gestion des Catways</h2>

                <br>

                <div id="alert-container"></div>
                <div class="section-header">
                    <button id="btnAddCatway">Ajouter un catway</button>
                </div>

                <br>
                
                <div id="formContainer" class="form-card" style="display: none;">
                    <form id="catwayForm">
                        <h3 id="formTitle">Ajouter un catway</h3>

                        <input type="hidden" id="catwayId">

                        <div class="form-group">
                            <label for="catwayNumber">Num√©ro *</label>
                            <input type="number" id="catwayNumber" required>
                        </div>

                        <div class="form-group">
                            <label for="catwayType">Type *</label>
                            <select id="catwayType" required>
                                <option value="">-- Choisir --</option>
                                <option value="long">Long</option>
                                <option value="short">Short</option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="catwayState">√âtat *</label>
                            <textarea id="catwayState" rows="3" required></textarea>
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">üíæ Enregistrer</button>
                            <button type="button" class="btn btn-secondary" id="btnCancelForm">‚ùå Annuler</button>
                        </div>
                    </form>
                </div>

                <!-- Liste des catways -->
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Catway N¬∞</th>
                                <th>Type</th>
                                <th>√âtat</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="catwaysTableBody">
                            <tr>
                                <td class="text-center">Chargement...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
    </main>

    <script src="/javascripts/catways.js"></script>
</body>

</html>