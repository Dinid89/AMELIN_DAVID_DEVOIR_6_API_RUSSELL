<!DOCTYPE html>
<html lang="fr">

<head>
    <%- include("composants/head") %>
</head>

<body>
    <header>
        <%- include("composants/navbar") %>
    </header>

    <main>
        <%- include("composants/aside") %>

            <section>
                <div class="section-header">
                    <h2>Gestion des Utilisateurs</h2>
                    <br>
                    <button class="btn btn-primary" id="btnAddUser">Ajouter un utilisateur</button>
                </div>

                <div id="alert-container"></div>

                <!-- Formulaire d'ajout/modification -->
                <div id="formContainer" class="form-card" style="display: none;">
                    <h3 id="formTitle">Ajouter un utilisateur</h3>
                    <form id="userForm">
                        <input type="hidden" id="oldEmail">

                        <div class="form-group">
                            <label for="username">Nom d'utilisateur *</label>
                            <input type="text" name="username" id="username" required minlength="3">
                        </div>

                        <div class="form-group">
                            <label for="email">Email *</label>
                            <input type="email" name="email" id="email" required autocomplete="email">
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe <span id="passwordNote">(laisser vide pour ne pas
                                    modifier)</span></label>
                            <input type="password" name="password" id="password" minlength="6" autocomplete="current-password">
                        </div>

                        <div class="form-actions">
                            <button type="submit" class="btn btn-primary">ğŸ’¾ Enregistrer</button>
                            <button type="button" class="btn btn-secondary" id="btnCancelForm">âŒ Annuler</button>
                        </div>
                    </form>
                </div>

                <!-- Liste des utilisateurs -->
                <div class="table-container">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom d'utilisateur</th>
                                <th>Email</th>
                                <th>Date de crÃ©ation</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody id="usersTableBody">
                            <tr>
                                <td colspan="4" class="text-center">Chargement...</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </section>
    </main>

    <script src="/javascripts/users.js"></script>
</body>

</html>